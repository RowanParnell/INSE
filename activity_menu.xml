<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/UserInfoOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="User Information"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/textWhite"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/Book_Seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="@string/bookSeatButton"
        android:layout_below="@+id/UserInfoOut"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:textColor="@color/textWhite"
        android:onClick="bookSeat" />

    <Button
        android:id="@+id/View_Bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="@string/viewBookingsButton"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/Book_Seat"
        android:layout_alignParentEnd="true"
        android:textColor="@color/textWhite"
        android:onClick="viewBookings"/>

    <Button
        android:id="@+id/Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="@string/logoutButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/textWhite"
        android:onClick="logout" />

    <Button
        android:id="@+id/Map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="@string/mapButton"
        android:layout_marginTop="47dp"
        android:textColor="@color/textWhite"
        android:layout_below="@+id/View_Bookings"
        android:layout_alignParentStart="true" />


</RelativeLayout>
